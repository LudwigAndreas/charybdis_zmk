&kp K_PLAY_PAUSE  &kp LGUI  &kp LEFT_ALT  &kp LCTRL  &kp LSHFT  &trans    &kp LEFT  &kp DOWN       &kp UP_ARROW  &kp RIGHT  &trans      &kp K_MUTE
&kp K_PREVIOUS    &trans    &trans        &trans     &trans     &trans    &kp HOME  &kp PAGE_DOWN  &kp PG_UP     &kp END    &kp INSERT  &kp K_VOL_UP
                                          &trans     &trans     &trans    &trans    &kp DEL
                                                     &trans     &trans    &trans
            >;
        };

        Raise {
            bindings = <
&kp GRAVE      &kp EXCLAMATION   &kp AT_SIGN      &kp HASH         &kp DOLLAR       &kp PERCENT          &kp CARET  &kp AMPERSAND  &kp ASTERISK  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp UNDERSCORE
&kp BACKSLASH  &kp LEFT_BRACKET  &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp RIGHT_BRACKET    &trans     &trans         &trans        &trans                &trans                 &trans
&kp PLUS       &kp MINUS         &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &kp EQUAL            &trans     &kp RSHIFT     &kp RCTRL     &kp RIGHT_ALT         &kp RGUI               &trans
&kp PERIOD     &kp SLASH         &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &kp ASTERISK         &trans     &trans         &trans        &trans                &trans                 &trans
                                                  &kp KP_NUMBER_0  &trans           &trans               &trans     &trans
                                                                   &trans           &trans               &trans
            >;
        };

        Mouse {
            bindings = <
&bootloader  &sys_reset  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_CLR    &bt BT_CLR  &bt BT_SEL 2  &bt BT_SEL 1  &bt BT_SEL 0  &sys_reset  &bootloader
&trans       &trans      &trans        &trans        &trans        &trans        &trans      &trans        &trans        &trans        &trans      &trans
&trans       &kp LGUI    &kp LALT      &kp LCTRL     &kp LSHIFT    &trans        &trans      &kp RSHFT     &kp RCTRL     &kp RALT      &kp RGUI    &trans
&trans       &trans      &mo 4         &mo 5         &trans        &trans        &trans      &trans        &mo 5         &mo 4         &trans      &trans
                                       &mkp MB2      &mkp MB1      &mkp MB3      &mkp MB3    &mkp MB1
                                                     &trans        &mkp MB2      &mkp MB2
            >;
        };

        Ds {
            bindings = <
&trans  &trans    &trans    &trans     &trans      &trans      &trans    &trans      &trans     &trans         &trans    &trans
&trans  &trans    &trans    &trans     &trans      &trans      &trans    &trans      &trans     &trans         &trans    &trans
&trans  &kp LGUI  &kp LALT  &kp LCTRL  &kp LSHIFT  &trans      &trans    &kp RSHIFT  &kp RCTRL  &kp RIGHT_ALT  &kp RGUI  &trans
&trans  &trans    &trans    &trans     &trans      &trans      &trans    &trans      &trans     &trans         &trans    &trans
                            &mkp MB2   &mkp MB1    &mkp MB3    &mkp MB3  &mkp MB1
                                       &trans      &mkp MB2    &mkp MB2
            >;

            label = "Drag Scroll";
