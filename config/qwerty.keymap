    keymap {
        compatible = "zmk,keymap";

        Base {
            bindings = <
&kp ESCAPE      &kp N1   &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5    &kp N6      &kp N7         &kp N8     &kp N9   &kp N0      &kp MINUS
&kp TAB         &kp Q    &kp W         &kp E         &kp R         &kp T           &kp Y       &kp U          &kp I      &kp O    &kp P       &kp BACKSLASH
&kp LEFT_SHIFT  &kp A    &kp S         &kp D         &kp F         &kp G           &kp H       &kp J          &kp K      &kp L    &kp SEMI    &kp APOS
&kp LCTRL       &lt 3 Z  &kp X         &kp C         &kp V         &kp B           &kp N       &kp M          &kp COMMA  &kp DOT  &lt 3 FSLH  &kp RCTRL
                                       &kp ENTER     &kp SPACE     &mo 1           &mo 2       &kp BACKSPACE
                                                     &kp LEFT_ALT  &kp LGUI        &kp ESCAPE
            >;
        };

        Lower {
            bindings = <
&kp F12           &kp F1    &kp F2        &kp F3     &kp F4     &kp F5    &kp F6    &kp F7         &kp F8        &kp F9     &kp F10     &kp F11
